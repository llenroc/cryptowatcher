@{
    ViewData["Title"] = "Home Page";
}

<h3>Poloniex dashboard</h3>

<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">

<div ng-app="MyApp" ng-controller="homeController">

    @*Loader*@
    <div ng-show="loaderVisibility" class="overlay"></div>
    <div ng-show="loaderVisibility" id="loaderModernize"></div>

    <div class="row">
        <div class="col-md-3">
            <button type="button" class="btn btn-labeled btn-default btn-sm" ng-click="refreshData();" style="color:dodgerblue">
                <span class="btn-label"><i class="glyphicon glyphicon-refresh"></i></span> Refresh
            </button>
            <button ng-show="!isAutoRefresh" type="button" class="btn btn-labeled btn-default btn-sm" ng-click="autoRefreshData();" style="color:dodgerblue">
                <span class="btn-label"><i class="glyphicon glyphicon-play"></i></span> Auto refresh
            </button>
            <button ng-cloak ng-show="isAutoRefresh" type="button" class="btn btn-labeled btn-default btn-sm" ng-click="autoRefreshData();" style="color:dodgerblue">
                <span class="btn-label"><i class="glyphicon glyphicon-pause"></i></span> Auto refresh
            </button>
            <button data-toggle="collapse" data-target="#chart" uib-tooltip="Chart" class="btn btn-labeled btn-default btn-sm" ng-click="loadChartData();">
                <span class="btn-label"><i class="glyphicon glyphicon-stats" style="color:darkorange;"></i>&nbsp;</span>
            </button>
        </div>
    </div>
    <div>
        <div class="row collapse" id="chart">
            <div class="col-md-12" style="padding:5px">
                <highchart config="chartConfig1" style="width:100%;height:350px" ng-cloak></highchart>
            </div>
        </div>
    </div>
    <br />
    @*<div ag-grid="gridOptionsAG" class="ag-fresh" style="height: 500px;margin-bottom:20px"></div>*@
    <span style="background-color: limegreen"></span>
    <div ui-grid="gridOptionsUI" style="width:100%;height:700px"></div>
</div>

@section Scripts {
    <script src="~/App/app.js" asp-append-version="true"></script>
    <script src="~/App/cryptoApiService.js" asp-append-version="true"></script>
    <script src="~/App/ViewModel/Home/homeIndexViewModel.js" asp-append-version="true"></script>
    <link href="~/css/loader.css" rel="stylesheet" />
    <script language="javascript">
        $(".overlay").show();
    </script>
}